{
  "compilerOptions": {
    "target": "es6",                      // Specify ECMAScript target version
    "module": "commonjs",                 // Specify module code generation
    "outDir": "./dist",                   // Output directory for compiled files
    "rootDir": "./src",                   // Root directory of TypeScript files
    "strict": true,                       // Enable strict type-checking options
    "esModuleInterop": true,              // Import compatibility with CommonJS
    "experimentalDecorators": true,       // Enable support for decorators
    "emitDecoratorMetadata": true         // Emit decorator metadata for reflection
  },
  "include": ["src/**/*.ts"],             // Include all .ts files in src directory
  "exclude": ["node_modules"]             // Exclude node_modules
}
